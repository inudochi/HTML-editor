<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.html_editor.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <HBox spacing="10">
    <Button text="Открыть" onAction="#onOpen"/>
    <Button text="Сохранить" onAction="#onSave"/>
    <Button text="Обновить" onAction="#onReload"/>
    <Button text="Вставить изображение" onAction="#onInsertImage"/>
  </HBox>

  <SplitPane dividerPositions="0.5">

    <VBox>
      <Label text="HTML редактор"/>
      <HTMLEditor fx:id="htmlEditor"/>
      <Label text="Source Code"/>
      <TextArea fx:id="sourceCode" wrapText="true"/>
    </VBox>

    <VBox>
      <Label text="Предпоказ"/>
      <WebView fx:id="webView" prefHeight="400" prefWidth="600"/>
    </VBox>
  </SplitPane>
</VBox>